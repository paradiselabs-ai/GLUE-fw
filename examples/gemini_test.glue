// Simple GLUE app to test Gemini provider integration
glue app {
    name = "Gemini Test"
    config {
        development = true  // Enable development mode for testing
    }
}

// Define a Gemini model
model gemini_model {
    provider = gemini
    role = "Answer questions and provide assistance"
    adhesives = [glue, velcro]
    config {
        model = "gemini-1.5-pro"
        temperature = 0.7
        max_tokens = 1024
    }
}

// Define a simple web search tool
tool web_search {
    provider = serp
}

// Define workflow
magnetize {
    research_team {
        lead = gemini_model
        tools = [web_search]
    }
}

apply glue
