// testing GLUE Application
// Generated with GLUE Framework's Interactive Builder

glue app {
    name = "testing"
    description = "test the glue fw"
    version = "0.1.0"
    config {
        development = true
        sticky = true  // Enable persistence
        portkey = true  // Enable Portkey integration
    }
}

// Model: Assistant
model Assistant {
    provider = openrouter
    role = "You are a helpful AI assistant"
    adhesives = ["glue", "velcro"]
    config {
        model = "meta-llama/llama-3.3-70b-instruct:free"
        temperature = 0.7
    }
}

// Tools
tool web_search {
    provider = serp
    config {
        max_results = 5
    }
}

// Teams and flows
magnetize {
    assist {
        lead = Assistant
        members = []
        tools = [web_search]
    }

}

apply glue